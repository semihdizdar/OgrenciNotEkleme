
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Ogrenci Bilgi Sistemi</title>
    <!-- Bootstrap CSS CDN -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    @*<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" />*@
    <!-- Our Custom CSS -->
    <link href="~/Bootstrap_Dosyalar1/Dosyalar1/StyleSheet2.css" rel="stylesheet" />
    <link href="~/Content/PagedList.css" rel="stylesheet" />
    <link href="~/Content/Chosen/chosen.min.css" rel="stylesheet" />
</head>
<link href="~/Content/Chosen/chosen.min.css" rel="stylesheet" />

<body>

    <nav class="navbar navbar-inverse">
        <p class="navbar-text navbar-right">
            @Html.Label("Hoşgeldin ")
            @Session["KullaniciAdi"]           
            @Session["Yetki"]
            <a href="../UyeGiris/Cıkıs.cshtml" class="btn btn-danger">Çıkış</a>
        </p>
    </nav>


    <div class="wrapper">
        <!-- Sidebar  -->
        <nav id="sidebar">
            <div class="sidebar-header">
                <h3>Ogrenci Bilgi Sistemi</h3>
                <strong>BS</strong>
            </div>

            <ul class="list-unstyled components">
                <li>
                    <a href="/Studens">
                        <i class="fas fa-image"></i>
                        Ogrenci Listesi
                    </a>
                </li>
                <li>
                    <a href="/Default/Index">
                        <i class="fas fa-image"></i>
                        Dersler
                    </a>
                </li>
                <li>
                    <a href="/Notlar/Index">
                        <i class="fas fa-image"></i>
                        Not Ekle
                    </a>
                </li>
                <li>
                    <a href="/Kulüpler/Index">
                        <i class="fas fa-image"></i>
                        Kulüpler
                    </a>
                </li>

                <li>
                    <a href="/NotHesap/Index">
                        <i class="fas fa-image"></i>
                        Not Hesap
                    </a>
                </li>
            </ul>
        </nav>

        <!-- Page Content  -->
        <div id="content">
            @RenderBody()

            @RenderSection("scripts", required: false)
        </div>
    </div>

    <!-- jQuery CDN -->
    <script src="https://code.jquery.com/jquery-1.12.0.min.js"></script>
    <!-- Bootstrap Js CDN -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#sidebarCollapse').on('click', function () {
                $('#sidebar').toggleClass('active');
            });
        });
    </script>

    <!-- Dropdownlist chose -->
    <script src="~/Scripts/chosen.jquery.min.js"></script>
</body>
</html>
