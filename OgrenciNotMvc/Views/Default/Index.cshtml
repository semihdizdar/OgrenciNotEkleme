@using OgrenciNotMvc.Models.EntityFramework
@model List<TBLDERSLER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-bordered">
    <tr>

        <th>Ders ID</th>
        <th>Ders Adi</th>
        <th>İşlemler</th>
    </tr>
    <tbody>
        @foreach(var ders in Model)
        {
        <tr>
            <td> @ders.DERSID </td>
            <td> @ders.DERSADI </td>
            <td><a href="/Default/Sil/@ders.DERSID" class="btn btn-danger">Sil</a>
                <a href="/Default/DersGetir/@ders.DERSID" class="btn btn-warning">Güncelle</a>           
            </td>
        </tr>
        }
    </tbody>
</table>

<a href="/Default/YeniKayit" class="btn btn-primary">Yeni Kayıt</a>

