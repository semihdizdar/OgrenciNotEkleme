@model OgrenciNotMvc.Models.EntityFramework.TBLDERSLER
@{
    ViewBag.Title = "DersGetir";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Guncelle", "Default", FormMethod.Post))
{

    <div class="form-group">

        <label>Ders Adi</label>
        @Html.TextBoxFor(m => m.DERSADI, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.DERSADI, "", new { @style = "color:red" })

    </div>
    @Html.HiddenFor(m => m.DERSID);

    <div>
        <button class="btn btn-success">Güncelle</button>
    </div>

}

