@model OgrenciNotMvc.Models.EntityFramework.TBLOGRENCİLER
@{
    ViewBag.Title = "OgrenciEkle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" class="form-group">

    <div>
        <label>Ogrenci Adi</label>
        <input type="text" class="form-control" name="OGRAD" />
    </div>

    <div>
        <label>Ogrenci Soyad</label>
        <input type="text" class="form-control" name="OGRSOYAD" />
    </div>

    <div>
        <label>Ogrenci Fotoğraf</label>
        <input type="text" class="form-control" name="OGRFOTOGRAF" />
    </div>

    <div>
        <label>Ogrenci Cinsiyeti</label>

        @Html.DropDownList("OGRCİNSİYET",

        new[]
        {
            new SelectListItem() {Value="1", Text="Erkek"},
            new SelectListItem() {Value="2", Text = "Bayan"}
        }

        , "Cinsiyet Seçiniz...", new { @class = "form-control" })

    </div>

    <div>
        <label>Ogrenci Kulüp</label>
        @Html.DropDownListFor(m => m.TBLKULUPLER.KULUPADİ, (List<SelectListItem>)ViewBag.dgr,  new { @class = "form-control" })
    </div>



    <div style="margin-top:10px">
        <button class="btn btn-info">Kulup Ekle</button>

    </div>
</form>
